type Product {
    id: ID! @unique
    title: String!
    description: String
    categories: [Category!]! @relation(name: "ProductInCategoryRelation")
}

type Category {
    id: ID! @unique
    title: String!
    description: String
    subcategories: [Category!]!
    products: [Product!]! @relation(name: "ProductInCategoryRelation")
}

type User {
    id: ID! @unique
    email: String! @unique
    role: UserRole!

    password_hash: String!
    password_salt: String! @unique

    last_login_date: DateTime
}

type ActivationCode {
    id: ID! @unique
    email: String! @unique
    valid_until: DateTime!
    code: String!
}

enum UserRole {
    USER
    MODERATOR
    ADMIN
}
